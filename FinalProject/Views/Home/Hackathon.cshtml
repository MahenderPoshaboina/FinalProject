@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Hackathon Details</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .container {
            margin-top: 50px;
        }

        .hackathon-poster {
            max-width: 100%;
            height: auto;
        }

        .hackathon-details {
            margin-top: 20px;
        }

        .action-buttons {
            margin-top: 20px;
        }
        .instructions {
            margin-top: 30px;
            padding: 20px;
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: 5px;
        }

        .hackathon-card {
            margin-top: 20px;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease-in-out;
            max-width: 500px; /* Adjust the maximum width of the card */
        }

            .hackathon-card:hover {
                transform: scale(1.05);
            }

            .hackathon-card img {
                width: 100%; /* Make the image fill the card */
                height: auto;
                max-height: 300px; /* Adjust the maximum height of the image */
            }

        .hackathon-section {
            margin-top: 50px;
        }

            .hackathon-section h2 {
                margin-bottom: 20px;
            }

        #map {
            height: 300px;
            border: 1px solid #dee2e6;
            border-radius: 10px;
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="text-center">
            <img src="~/Content/hackathonpage.jpg" alt="Hackathon Poster" class="hackathon-poster">
        </div>

        <div class="hackathon-details">
            <h2 class="text-center">Hackathon Details</h2>

            <dl class="row">
                <dt class="col-sm-3">Duration:</dt>
                <dd class="col-sm-9">3 Days</dd>

                <dt class="col-sm-3">Deadline:</dt>
                <dd class="col-sm-9">April 30, 2024</dd>

                <dt class="col-sm-3">Mode of Conduct:</dt>
                <dd class="col-sm-9">Virtual</dd>

                <dt class="col-sm-3">Cash Prize:</dt>
                <dd class="col-sm-9">$10,000</dd>

                <dt class="col-sm-3">Problem Statement:</dt>
                <dd class="col-sm-9">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ac suscipit augue, vel dapibus ex.
                    Nulla facilisi. In hac habitasse platea dictumst. Integer auctor vitae libero vel facilisis.
                </dd>
            </dl>
        </div>

        <div class="text-center action-buttons">
            <button class="btn btn-primary" onclick="createTeam()" asp-action="CreateTeam">Create Team</button>
            <button class="btn btn-success" onclick="joinTeam()">Join Team</button>
            <button class="btn btn-info" onclick="submitIdea()">Submit Idea</button>
        </div>
        <div class="instructions">
            <h3 class="text-center">Instructions</h3>
            <p>
                Welcome to our hackathon platform! Here are some instructions on how to participate:
                <ul>
                    <li>Register for the hackathon.</li>
                    <li>Form a team or join an existing one.</li>
                    <li>Submit your innovative ideas and solutions.</li>
                    <li>Participate in coding challenges and activities.</li>
                    <li>Collaborate with fellow participants and mentors.</li>
                </ul>
                We wish you a successful and enjoyable hacking experience!
            </p>
        </div>

        <!-- Upcoming Hackathons -->
        <div class="hackathon-section">
            <h2 class="text-center">Upcoming Hackathons</h2>
            <div class="row">
                <!-- Sample hackathon cards (repeat for each hackathon) -->

                <div class="col-md-6 col-lg-3">
                    <div class="hackathon-card">
                        <img src="~/Content/hackathonpage.jpg" alt="Upcoming Hackathon">
                        <div class="card-body">
                            <h5 class="card-title">Upcoming Hackathon Name </h5>
                            <p class="card-text">Date: May 15, 2024</p>
                            <p class="card-text">Location: Virtual</p>
                            <a href="#" class="btn btn-success">Details</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="hackathon-card">
                        <img src="~/Content/hackathonpage.jpg" alt="Upcoming Hackathon">
                        <div class="card-body">
                            <h5 class="card-title">Upcoming Hackathon Name </h5>
                            <p class="card-text">Date: May 15, 2024</p>
                            <p class="card-text">Location: Virtual</p>
                            <a href="#" class="btn btn-success">Details</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="hackathon-card">
                        <img src="~/Content/hackathonpage.jpg" alt="Upcoming Hackathon">
                        <div class="card-body">
                            <h5 class="card-title">Upcoming Hackathon Name </h5>
                            <p class="card-text">Date: May 15, 2024</p>
                            <p class="card-text">Location: Virtual</p>
                            <a href="#" class="btn btn-success">Details</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-lg-3">
                    <div class="hackathon-card">
                        <img src="~/Content/hackathonpage.jpg" alt="Upcoming Hackathon">
                        <div class="card-body">
                            <h5 class="card-title">Upcoming Hackathon Name </h5>
                            <p class="card-text">Date: May 15, 2024</p>
                            <p class="card-text">Location: Virtual</p>
                            <a href="#" class="btn btn-success">Details</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>

        <!-- Past Hackathons -->
        <div class="hackathon-section">
            <h2 class="text-center">Past Hackathons</h2>
            <div class="row">
                <!-- Sample hackathon cards (repeat for each hackathon) -->
                @for (int i = 1; i <= 4; i++)
                {
                    <div class="col-md-6 col-lg-3">
                        <div class="hackathon-card">
                            <img src="~/Content/hackathonpage.jpg" alt="Past Hackathon">
                            <div class="card-body">
                                <h5 class="card-title">Past Hackathon Name @i</h5>
                                <p class="card-text">Date: April 10, 2024</p>
                                <p class="card-text">Location: Virtual</p>
                                <a href="#" class="btn btn-success">Details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        function createTeam() {

             window.location.href = '@Url.Action("CreateTeam", "Teams")';
        }

        function joinTeam() {
            window.location.href = '@Url.Action("JoinTeam", "Home")';
        }

        function submitIdea() {
           window.location.href = '@Url.Action("IdeaSubmission", "Home")';
        }
    </script>

</body>
</html>
