@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Idea Submission</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .idea-submission-form {
            background-color: #ffffff;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

            .idea-submission-form h2 {
                color: #007bff;
            }

        .form-group label {
            color: #495057;
        }

        .form-control {
            border: 1px solid #ced4da;
        }

        .custom-file-label {
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        .btn-primary {
            background-color: #007bff;
            border: 1px solid #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border: 1px solid #0056b3;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="text-center">
            <h2>Idea Submission</h2>
        </div>

        <div class="idea-submission-form">
            <form asp-action="Create" asp-controller="Ideas">
                <div class="form-group">
                    <label for="teamCode">Team Code:</label>
                    <input type="text" class="form-control" id="teamCode" placeholder="Enter team code" required>
                </div>
                <div class="form-group">
                    <label for="ideaTitle">Team Name:</label>
                    <input type="text" class="form-control" id="ideaTitle" placeholder="Enter team name" required>
                </div>
                <div class="form-group">
                    <label for="ideaTitle">Idea Title:</label>
                    <input type="text" class="form-control" id="ideaTitle" placeholder="Enter idea title" required>
                </div>
                <div class="form-group">
                    <label for="ideaDescription">Idea Description:</label>
                    <textarea class="form-control" id="ideaDescription" rows="4" placeholder="Enter idea description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="ideaPPT">Upload Idea PPT:</label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="ideaPPT" accept=".ppt, .pptx" required>
                        <label class="custom-file-label" for="ideaPPT">Choose file</label>
                    </div>
                </div>
                <button type="button" class="btn btn-success btn-block" onclick="submitIdea()">Submit Idea</button>
            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
    // Display selected file name in the file input field
    $('.custom-file-input').on('change', function () {
        var fileName = $(this).val().split('\\').pop();
        $(this).next('.custom-file-label').html(fileName);
    });

    function submitIdea() {
        var teamCode = document.getElementById('teamCode').value;
        var ideaTitle = document.getElementById('ideaTitle').value;
        var ideaDescription = document.getElementById('ideaDescription').value;
        var ideaPPT = document.getElementById('ideaPPT').value;

        if (teamCode && ideaTitle && ideaDescription && ideaPPT) {
            // You can add your logic here to handle idea submission (e.g., making an API request)
            // For now, display a success alert
            alert('Idea submitted successfully!');
        } else {
            alert('Please fill in all required fields.');
        }
    }
    </script>

</body>
</html>
