@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Idea Submission</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            margin-top: 50px;
        }

        .idea-submission-form {
            background-color: #ffffff;
            border: 1px solid #dee2e6;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

            .idea-submission-form h2 {
                color: #007bff;
            }

        .form-group label {
            color: #495057;
        }

        .form-control {
            border: 1px solid #ced4da;
        }

        .custom-file-label {
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        .btn-primary {
            background-color: #007bff;
            border: 1px solid #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border: 1px solid #0056b3;
            }
    </style>
</head>
<body>

    <div class="container">
        <div class="text-center">
            <h2>Idea Submission</h2>
        </div>

        <div class="idea-submission-form">
            <form method="post" asp-controller="Ideas" asp-action="IdeaSubmission" >

            
                <div class="form-group">
                    <label for="ideaID">Idea ID:</label>
                    <input type="text" name="IdeaId" class="form-control" id="teamCode" placeholder="Enter Idea ID" required>
                </div>
                <div class="form-group">
                    <label for="teamCode">Team Code:</label>
                    <input type="text" name="TeamCode" class="form-control" id="teamCode" placeholder="Enter team code" required>
                </div>

                <div class="form-group">
                    <label for="ideaTitle">Idea Title:</label>
                    <input type="text" name="IdeaTitle" class="form-control" id="ideaTitle" placeholder="Enter idea title" required>
                </div>
                <div class="form-group">
                    <label for="ideaDescription">Idea Description:</label>
                    <input type="text" class="form-control" name="IdeaDescription" id="ideaDescription" rows="" placeholder="Enter idea description" required>
                </div>
                <div class="form-group">
                    <label for="ideaPPT">Idea PPT Google Drive Link:</label>
                    <input type="text" class="form-control" name="IdeaPPTLink" id="ideaPPTLink" placeholder="Enter Google Drive link" required>
                </div>

                <button type="submit" class="btn btn-success btn-block" id="submitBtn">Submit Idea</button>

            </form>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  
</body>
</html>
