@model IEnumerable<FinalProject.Models.Idea>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdeaTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdeaDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdeaPptFile)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TeamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdeaTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdeaDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IdeaPptFile)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.TeamCode }) |
